@model zhankui_wang_Practice_Asst_5.Models.BridgeClub

@{
    ViewData["Title"] = "Create New Club";
}

<h1>Create New Club</h1>

<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="NewClub" method="post">
            <div class="form-group">
                <label asp-for="ClubName" class="control-label"></label>
                <input asp-for="ClubName" class="form-control" />
                <span asp-validation-for="ClubName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CityName" class="control-label"></label>
                <select asp-for="CityName" class="form-control" asp-items="ViewBag.CityNames"></select>
                <span asp-validation-for="CityName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
